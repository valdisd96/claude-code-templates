{
  "permissions": {
    "allow": [
      "Bash(python*)",
      "Bash(pip*)",
      "Bash(pytest*)",
      "Bash(jupyter*)",
      "Bash(conda*)",
      "Bash(poetry*)"
    ],
    "deny": [
      "Bash(rm -rf /)*"
    ]
  },
  "env": {
    "PYTHONPATH": "${workspaceFolder}",
    "JUPYTER_CONFIG_DIR": "${workspaceFolder}/.jupyter"
  }
}
